<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="sales.order.history">
                <action method="setTemplate" ifconfig="sales/order_status_color/enabled_my_account_history">
                    <argument name="setTemplate" xsi:type="string">Nivys_OrderStatusColor::order/hyva_history.phtml</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
