<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <group id="order_status_color" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Order Status Colors</label>
                <field id="enabled_my_account_recent" translate="label comment" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable in "My Account > Dashboard"</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enabled_my_account_history" translate="label comment" type="select" sortOrder="20" showInDefault="1">
                    <label>Enable in "My Account > History"</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="colors" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Colors</label>
                    <frontend_model>Nivys\OrderStatusColor\Block\Adminhtml\Form\Field\Colors</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>
